<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Labelul din partea de sus a ferestrei -->
    <Label text="Teatrul Arcadia" layoutX="200" layoutY="20" style="-fx-font-size: 24; -fx-text-fill: red; -fx-font-weight: bold;" />

    <!-- Label și TextField pentru Nume Utilizator -->
    <Label text="Nume Utilizator" layoutX="150" layoutY="150" style="-fx-font-size: 14; -fx-font-weight: bold;" />
    <TextField fx:id="nume" layoutX="300" layoutY="150" prefWidth="150"/>

    <!-- Label și PasswordField pentru Parola -->
    <Label text="Parola" layoutX="150" layoutY="200" style="-fx-font-size: 14; -fx-font-weight: bold;" />
    <PasswordField fx:id="parola" layoutX="300" layoutY="200" prefWidth="150"/>

    <!-- Butonul de Logare -->
    <Button text="Logare" layoutX="300" layoutY="250" prefWidth="100" onAction="#handleLogIn"/>

    <!-- Butonul de Vizitare -->
    <Button onAction="#handleVizitare" text="Vizitare" layoutX="300" layoutY="300" prefWidth="100" />

</AnchorPane>
